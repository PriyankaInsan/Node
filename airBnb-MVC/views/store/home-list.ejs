<%- include('../partials/header')%>
<h1 class="text-red-400 text-2xl text-center font-bold mb-5 mt-2" >Here are your registered homes</h1>

<div class="flex">
    <% registeredHome.forEach((home)=>{%>
        <div class="bg-gray-100 p-4 mr-auto text-center rounded-lg shadow-md hover:shadow-lg transition duration-300"> 
            <div class="text-lg text-gray-800">Home: <%= home.home %></div>
            <div class="text-lg text-gray-800">Price per night: <%= home.price %></div>
            <div class="text-lg text-gray-800">Location: <%= home.location %></div>
            <div class="text-lg text-gray-800">Rating: <%= home.rating %></div>
            <div class="text-lg text-gray-800"><%= home.photo %></div>
            <div><button class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300">Book</button></div> 
            <a href="/homeList/<%= home.id%>"><button class="w-full bg-red-500 text-white py-2 mt-2 rounded-md hover:bg-red-600 transition duration-300">Details</button></a>   
            <%- include('../partials/favorite',{home})%>            
        </div>
    <%}) %>
</div>

</body>
</html>