<%- include('../partials/header')%>
<main class="container mx-auto mt-12 p-8">
    <h1 class="text-5xl font-extrabold mb-10 text-center text-gray-800">Sign Up to AirBnB</h1>
    <form class="max-w-lg mx-auto bg-white p-8 rounded-xl shadow-xl" action="/signup" method="post">
        <% if(error.length>0){ %>
            <div>
                <% error.forEach((err) => { %>
                    <p class="text-red-500 text-sm font-medium mb-4">
                        <%= err %>
                    </p>
                <% }) %>
            </div>
        <% } %>
        <div class="mb-6 relative">
            <label for="fname" class="block text-lg font-medium text-gray-700 mb-2">First Name</label>
            <div class="flex items-center">
                <span class="absolute left-3 text-gray-400">
                    <i class="fas fa-user"></i>
                </span>
                <input class="w-full pl-10 border border-gray-300 rounded-lg shadow-sm px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition duration-300" id="fname" name="fname" type="text" placeholder="Enter First Name" 
                value="<%= oldInput.fname? oldInput.fname: '' %>"
                autocomplete="on" />
            </div>
        </div>
        <div class="mb-6 relative">
            <label for="lname" class="block text-lg font-medium text-gray-700 mb-2">Last Name</label>
            <div class="flex items-center">
                <span class="absolute left-3 text-gray-400">
                    <i class="fas fa-user"></i>
                </span>
                <input class="w-full pl-10 border border-gray-300 rounded-lg shadow-sm px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition duration-300" id="lname" name="lname" type="text" placeholder="Enter Last Name" value="<%= oldInput.lname? oldInput.lname: '' %>" autocomplete="on" />
            </div>
        </div>
        <div class="mb-6 relative">
            <label for="email" class="block text-lg font-medium text-gray-700 mb-2">Email</label>
            <div class="flex items-center">
                <span class="absolute left-3 text-gray-400">
                    <i class="fas fa-envelope"></i>
                </span>
                <input class="w-full pl-10 border border-gray-300 rounded-lg shadow-sm px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition duration-300" id="email" name="email" type="email" placeholder="Enter Email" value="<%= oldInput.email? oldInput.email: '' %>" autocomplete="on" />
            </div>
        </div>
        <div class="mb-6 relative">
            <label for="password" class="block text-lg font-medium text-gray-700 mb-2">Password</label>
            <div class="flex items-center">
                <span class="absolute left-3 text-gray-400">
                    <i class="fas fa-lock"></i>
                </span>
                <input class="w-full pl-10 border border-gray-300 rounded-lg shadow-sm px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition duration-300" id="password" name="password" type="password" placeholder="Enter Password" 
                autocomplete="on" />
            </div>
        </div>
        <div class="mb-6 relative">
            <label for="cpassword" class="block text-lg font-medium text-gray-700 mb-2">Confirm Password</label>
            <div class="flex items-center">
                <span class="absolute left-3 text-gray-400">
                    <i class="fas fa-lock"></i>
                </span>
                <input class="w-full pl-10 border border-gray-300 rounded-lg shadow-sm px-4 py-3 focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition duration-300" id="cpassword" name="cpassword" type="password" placeholder="Confirm Password" 
                autocomplete="on" />
            </div>
        </div>
        <div class="mb-6">
            <p class="font-medium text-gray-700 mb-3">User Type</p>
            <label class="inline-flex items-center mr-6">
                <input class="form-radio text-red-500 focus:ring-red-400" id="user" name="role" type="radio" value="user" <%= oldInput.role === 'user' ? 'checked' : '' %>/>
                <span class="ml-2 text-gray-600">User</span>
            </label>
            <label class="inline-flex items-center">
                <input class="form-radio text-red-500 focus:ring-red-400" id="admin" name="role" type="radio" value="admin" <%= oldInput.role === 'admin' ? 'checked' : '' %>/>
                <span class="ml-2 text-gray-600">Admin</span>
            </label>
        </div>
        <div class="mb-6">
            <label class="inline-flex items-center">
                <input class="form-checkbox text-red-500 focus:ring-red-400" id="terms" name="terms" type="checkbox" checked="<%= oldInput.terms==='on'%>"/>
                <span class="ml-2 text-gray-600">I accept the terms and conditions.</span>
            </label>
        </div>
        <button type="submit" class="w-full bg-gradient-to-r from-red-500 to-red-600 text-white py-3 rounded-lg font-semibold hover:from-red-600 hover:to-red-700 transition duration-300 shadow-lg">
            Sign Up
        </button>
    </form>
</main>
</body>
</html>